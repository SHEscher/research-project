{
    "project_name": "MyGreatStudy",
    "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '_').replace('-', '_') }}",
    "project_short_description": "{{ cookiecutter.project_name}} comprises great reproducible research",
    "version": "0.1.0",
    "full_name": "Simon M. Hofmann",
    "email": "simon.m.hofmann@example.com",
    "github_username": "SHEscher",
    "python_version": "3.11",
    "create_conda_env": true,
    "init_git": true,
    "use_pytest": true,
    "use_black": true,
    "linting": [
        "ruff",
        "flake8",
        "none"
    ],
    "open_source_license": [
        "MIT license",
        "BSD license",
        "ISC license",
        "Apache Software License 2.0",
        "GNU General Public License v3",
        "Not open source (yet)"
