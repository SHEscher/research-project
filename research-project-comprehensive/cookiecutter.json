        "*.nii.gz",
        "*.pdf"
    ],
    "__prompts__": {
        "project_name": "Select your research project name:",
        "project_slug": "Select a short name for your research project / module (one word):",
        "project_short_description": "Write a short project description:",
        "version": "Version of your research project:",
        "full_name": "Provide the full name of the main author:",
        "email": "Provide the author's email:",
        "github_username": "Provide the GitHub username or organization:",
        "python_version": "Which Python version to use:",
        "create_conda_env": "Do you want to create a conda environment:",
        "init_git": "Initialize a git repository in the project folder:",
        "use_pytest": "Do you want to use pytest for code testing (else unittest):",
        "use_black": "Enable black formatting:",
        "linting": {
            "__prompt__": "Which linting tool do you want to use?",
            "ruff": "Ruff",
            "flake8": "Flake8",
            "none": "No linting tool"
        },
        "open_source_license": "Select an (open source) license"
    }
}
